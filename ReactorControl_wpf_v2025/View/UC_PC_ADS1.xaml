<UserControl x:Class="ReactorControl.View.UC_PC_ADS1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ReactorControl.View"
             xmlns:ProcessValue="clr-namespace:ProcessValue;assembly=ProcessValue"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1874">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="757"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#FFFFFF">
            <Label Content="Active Drainange System" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32" Height="45" FontFamily="Arial" FontWeight="Bold"/>
            <Label Content="Page 99" HorizontalAlignment="Right" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" Height="45" FontFamily="Arial" FontWeight="Bold" Margin="0,0,20,0"/>
        </Grid>
        <Grid Grid.Row="1" Background="#FFFFFF">
            <Button Content="CLD" Click="Btn_CLD_Click" Tag="CLD" HorizontalAlignment="Right" FontSize="18" Height="30" FontFamily="Arial"  Margin="0,0,300,0" VerticalAlignment="Center" Width="120" Background="#FFA0A0A0"/>
            <Button Content="SLD" Click="Btn_SLD_Click" Tag="SLD" HorizontalAlignment="Right" FontSize="18" Height="30" FontFamily="Arial"  Margin="0,0,150,0" VerticalAlignment="Center" Width="120" Background="#FFA0A0A0"/>
            <Button Content="PID" Click="Btn_PID_Click" Tag="P_ID" HorizontalAlignment="Right" FontSize="18" Height="30" FontFamily="Arial"  Margin="0,0,10,0" VerticalAlignment="Center" Width="120" Background="#FFA0A0A0"/>
        </Grid>
        <Grid Grid.Row="2" Background="Magenta">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="400*"/>
                <ColumnDefinition Width="20"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
            </Grid>
            <Grid Grid.Column="1">
                <Image Grid.Column="1" Margin="0,0,0,0" Source="/Images/p3_base.png" Width="1250" Height="716" />

                <Image x:Name="pp_001" Width="72" Height="22" Tag="PP-001" Margin="996,495,765,67" Source="/Images/obj_pump_on.png" Stretch="Fill" Cursor="Hand" ToolTip="펌프 (PP-001) 제어" MouseLeftButtonDown="PumpObject_Click"/>
                <Image x:Name="pp_002" Width="72" Height="22" Tag="PP-002" Margin="740,526,1022,102" Source="/Images/obj_pump_off.png" Stretch="Fill" Cursor="Hand" ToolTip="펌프 (PP-002) 제어" MouseLeftButtonDown="PumpObject_Click"/>

            </Grid>
            <Grid Grid.Column="2">
            </Grid>
        </Grid>
        <Grid Grid.Row="3" Background="#5555AA" Margin="0,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="474*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>

        </Grid>
    </Grid>

</UserControl>
